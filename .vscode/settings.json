{
  "files.exclude": {
    "**/.sass-cache/": true,
    "**/_site/": false, // set to true if you do not want to see the build output dir.
    "node_modules/": true
  },
  "search.exclude": {
    "node_modules/": true,
    "_site/**": true,
    "**/css/*": true,
    "*.lock": true,
    "**/.sass-cache/": true,
    "**/.publish/": true,
    ".vscode/**": true
  },
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#00fad9",
    "titleBar.inactiveForeground": "#00fad95D"
  },
  "cSpell.words": [
    "endmacro"
  ],
  "cSpell.ignoreWords": [
    "mpnpm"
  ]
}
